.formulario {
    layout: grid;
    grid-size: 2;
    grid-columns: 1fr 2fr;
    align: center middle;
}

.campo {
    display: flex;
    align-items: center;
    gap: 10px;  
}

.input {
      width: 100%; 
    max-width: 400px;  
}

.boton {
    align: center;
    width: auto;
    padding: 1;
    margin-top: 1;
}

.campo Label {
    min-width: 100px;  
}