.formulario {
    layout: grid;
    grid-size: 2;
    grid-columns: 1fr 2fr;
    align: center middle;
}

.campo {
    display: flex;
    align-items: center;
    gap: 10px;  
}

.input {
      width: 100%; 
    max-width: 400px;  
}

.botones {
    display: flex;
    justify-content: space-between;
    gap: 10px;
}

.boton {
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}


.campo Label {
    min-width: 100px;  
}

